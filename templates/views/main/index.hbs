            </div>

            <div class="row">

                {{#ifCond coins.length ">" 0 }}
                    {{#each coins}}

                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card rounded-0">
                            <div class="card-header bg-white">
                                <div class="row">
                                    <div class="col">
                                        {{!-- for object iteration, use '{{(at)key}}' instead --}}
                                        <h5 class="card-title mb-0 pt-1">{{inc @index}}. {{name}}</h5>
                                    </div>
                                    <div class="col-auto">
                                        <img class="crypto-image" src="{{iconUrl}}">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="crypto-card-summary pb-3">
                                    <p class="card-text">Price: {{price}}</p>
                                    <p class="card-text">Market Cap: {{marketCap}}</p>
                                    <p class="card-text">Daily Change: {{change}}%</p>
                                </div>
                            </div>
                        </div>
