                            <div class="card-body">
                                <a href="{{url}}" 
                                    style="text-decoration: none; color: #333;" target="_blank" rel="noreferrer">
                                    <div class="row mb-2">
                                        <div class="col">
                                            <h5 class="card-title mb-0 pt-1">{{name}}</h5>
                                        </div>
                                        <div class="col-auto">
                                            <img src="{{newsImage}}" alt="news" style="max-width: 200px; max-height: 100px;">
                                        </div>
                                    </div>
                                    <div class="crypto-card-news-snippet pb-3">
                                        <p class="card-text">{{description}}</p>
                                    </div>
                                    <div class="row">
                                        <div class="col d-flex align-items-center">
                                            <span class="provider-avatar">
                                                <img class="provider-avatar-image" src="{{providerImage}}">
