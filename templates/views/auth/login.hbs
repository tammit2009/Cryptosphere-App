
<div class="container">
    <div class="card card-container">
        
        <img id="profile-img" class="profile-img-card" src="./images/avatar_2x.png" />

        <h3 class="text-center">Login</h3>

        {{#ifCond message.length ">" 0 }}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <p>{{ message }}</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/ifCond}} 
        
        <form class="form-login mt-3 mb-2" action="#" method="post">
            <div class="form-group">
                <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required autofocus>
                <small id="email_error" class="text-error">Invalid Email.</small>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                <small id="password_error" class="text-error">Invalid Password.</small>
            </div>
            
            <button class="btn btn-lg btn-primary btn-block btn-login" type="submit">Login</button>
        </form>

        <p class="text-center">
            New user? <a href="/register" class="newuser-register">Register</a>
        </p>

    </div>
</div>